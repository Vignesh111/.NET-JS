@{
    ViewBag.Title = "Research";
}

@using System.Data;
@using System.Web.UI.WebControls;
@using System.Web.Script.Serialization;
@{
    JavaScriptSerializer javaSerial = new JavaScriptSerializer();
     if (Session["returnedJSON"] == null)
    {
        return;
    }

    var InterestArea = Session["returnedJSON"].ToString();
    var Faculty = Session["returnedJSON"].ToString();
   

}
<style>
</style>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var Interest = @Html.Raw(javaSerial.Serialize(InterestArea));


        $("#interest").accordion({
            collapsible: true,
            heightStyle: "content",
            fx: 'slide',
            fxDuration: 300
        });

        var InterestAreaJSON = JSON.parse(Interest);

        $.each(InterestAreaJSON.byInterestArea, function (i, item) {

            $('#hdr' + i).html("<p>" + item.areaName + "</p>");
            var textString = "<ul style='font-style: italic;'>";
            for (j = 0; j < item.citations.length; j++) {
                textString = textString + ("<li>" + item.citations[j] + "</li>");
            }
            textString = textString + "</ul>";
            $('#div' + i).html(textString);
           
        });
        var byFaculty = @Html.Raw(javaSerial.Serialize(Faculty));


        $("#faculty").accordion({
            collapsible: true,
            heightStyle: "content",
            fx: 'slide',
            fxDuration: 300
        });

        var byFacultyJSON = JSON.parse(byFaculty);

        $.each(byFacultyJSON.byFaculty, function (i, item) {

            $('#h' + i).html("<p>" + item.facultyName + "</p>");

            var textString = "<ul style='font-style: italic;'>";
            for (j = 0; j < item.citations.length; j++) {
                textString = textString + ("<li>" + item.citations[j] + "</li>");
            }
            textString = textString + "</ul>";
            $('#d' + i).html(textString);
            
        });

    });
   
</script>
